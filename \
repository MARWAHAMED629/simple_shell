#define HIST_MAX	4096


/* for convert_number() */
#define CONVERT_LOWERCASE	1
#define CONVERT_UNSIGNED	2



/* for read/write buffers */
#define READ_BUF_SIZE 1024
#define WRITE_BUF_SIZE 1024
#define BUF_FLUSH -1




/**
 * structures lists_l  - the  singly linked list
 * @name: the nmae.
 * @value: the value.
 * @next: points to the next node.
 *
 * Description: singly linked list node structure
 * for alias.
 */
typedef struct lists_l
{
	int        n;
	char      *v;
	struct lists_l	*next;
} lists_l;



/**
 *struct CommandInfo - contains pseudo-arguements to pass into a function,
 *allowing uniform prototype for function pointer struct
 *@arg: a string generated from getline containing arguements
 *@argv: an array of strings generated from arg
 *@path: a string path for the current command
 *@argc: the argument count
 *@line_count: the error count
 *@err_num: the error code for exit()s
 *@linecount_flag: if on count this line of input
 *@fname: the program filename
 *@env: linked list local copy of environ
 *@environ: custom modified copy of environ from LL env
 *@history: the history node
 *@alias: the alias node
 *@env_changed: on if environ was changed
 *@status: the return status of the last exec'd command
 *@cmd_buf: address of pointer to cmd_buf, on if chaining
 *@cmd_buf_type: CMD_type ||, &&, ;
 *@readfd: the fd from which to read line input
 *@histcount: the history line number count
 */
typedef struct cmmandInfo
{
	unsigned int line_c;
	char *arg;
	char **arg_value;
	char *cmd_path;
	int argcount;
	int error_c;
	int linec_f;
	char *filesn;
	lists_t *env;
	lists_t *cmd_history;
	lists_t *alias_list;
	char **environ;
	int env_change_f;
	int last_cmd_statue;

	char **command_buff; /* pointer to cmd ; chain buffer, for memory mangement */
	int command_buff_types; /* CMD_type ||, &&, ; */
	int readfd;
	int history_cline;
} cmds_t;







/** Processing the command entered by the user.
* The function receives a string containing the environmental variables */

int handle_command(char *commands, char *envp[]);

void handle_input(char *input, char *envp[]);

#define PIPELINE_MAX_COMMANDS 2
